vault server -dev ## start in dev mode

secrets## for crednetials/username-password

policy## for user related permission
group## attch policy and entities
entities# creating user and aliases

edit policy ##example

# Allow tokens to look up their own properties
path "secrets" {
    capabilities = ["read", "list"]
}

# Allow tokens to renew themselves
path "secrets/mysql" {
    capabilities = ["read", "list"]
}

set password to user with below cmd

export VAULT_ADDR='http://127.0.0.1:8200'

export PATH=$PATH:athtovaultbinary

./vault   login -method=token

./vault   login -method=userpass username=user 

./vault   login -method=userpass username=user password=pass

##get error details by logging

vault kv get secret/local## get eeor information

##dev server need

https://learn.hashicorp.com/vault/getting-started/policies

$ vault policy write my-policy -<<EOF
# Normal servers have version 1 of KV mounted by default, so will need these
# paths:
path "secret/*" {
  capabilities = ["create", "update"]
}
path "secret/foo" {
  capabilities = ["read"]
}

# Dev servers have version 2 of KV mounted by default, so will need these
# paths:
path "secret/data/*" {
  capabilities = ["create", "update"]
}
path "secret/data/foo" {
  capabilities = ["read"]
}
EO

vault write -address="http://127.0.0.1:8200"  auth/userpass/users/sk password="passw" 
vault write -address="http://127.0.0.1:8200"  auth/userpass/users/sk password="passw" policies=aclname 
or
vault write   auth/userpass/users/sk password="pass"

vault  kv list   secret
vault  kv get   secret/local




