nswap=$(blkid | grep swap | cut -d'"' -f2)
#cat /etc/fstab | grep -n swap | cut -d '=' -f 2 | cut -d ' ' -f 1 | tail -n 1 > /tmp/fstab.txt
oswap=$(cat /etc/fstab | grep swap | cut -d= -f2 | awk '{print $1}'| tail -n 1)
#line=$(cat /tmp/fstab.txt)
#line1=$(cat /tmp/swap.txt)
echo $oswap
echo $nswap
sed -i.bak "/swap/s/$oswap/$nswap/" /etc/fstab
swapon UUID=$nswap
mount -a


##!/bin/bash

cd
mkdir -m 777 /opt/user_data
echo -e "\e[1;31m 'creating folder  user data' \e[0m";
sleep 1
mkdir  /etc/screen
echo -e "\e[1;31m 'creating folder screen' \e[0m";
sleep 2
#echo -n "enter your username: "
#read   username
#echo -n "enter domain password: "
#read -s pass
#echo \n " enter yes/y or no/n "
#read option
#if [option=="yes"]do ;
echo -e "\e[1;32m 'copying files-------' \e[0m";
smbclient //ip/softwares_path -U user%pass -c 'cd old;cd ubuntu; recurse; prompt; lcd /opt/user_data; mget domain_access back'
sleep 3
chmod 440 /opt/user_data/domain_access
sleep 3
chown root:root /opt/user_data/domain_access
sleep 3
mv /opt/user_data/domain_access /etc/sudoers.d/
sleep 1
mv -f /opt/user_data/back /etc/screen/
sleep 3
echo -e "\e[1;33m 'setting wallpaper' \e[0m";
sleep 2
echo "gsettings set org.gnome.desktop.background picture-uri 'file:///etc/screen/back/i-exceed.xml' " >> /etc/bash.bashrc

sleep 2
source /home/superuser/.bashrc 
mv /lib/modules/$(uname -r)/kernel/drivers/usb/storage/usb-storage.ko /root

chmod +x /etc/screen/back/screen.sh
mv /etc/screen/back/screen.sh.desktop /etc/xdg/autostart/
#gnome-terminal
#gnome-terminal

#else 

#echo \n "exiting......."
#exit


